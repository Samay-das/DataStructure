stack = []
def push_element():
    if len(stack) == size:
        print("Stack is OverFlow")
    else:
        item = input("Enter the Element : ")
        stack.append(item)
        print(stack)

def pop_element():
    if not stack:
        print("Stack is UnderFlow")
    else:
        item = stack.pop()
        print("Delected element is : ",item)
        print(stack)

def peek_element():
    if not stack:
        print("Stack is UnderFlow")
    else:
        print(stack[-1])

size = int(input("Enter the size of Stack : "))
while True:
    print("1. Push Item \n2. Pop Item \n3. Peek Item \n4. Exit")
    choice = int(input("Enter your choice : "))
    if choice == 1:
        push_element()
    elif choice == 2:
        pop_element()
    elif choice == 3:
        peek_element()
    elif choice == 4:
        break
    else:
        print("Please Enter the valid option")
